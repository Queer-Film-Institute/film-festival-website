= content_for :body_class, 'body-home'

.hero{ style: "background-image: url(#{@homePage.hero_image.file.url})" }
  .hero__pink-shard
  .wrapper.wrapper--hero
    %h1
      - if @homePage.url
        %a{ href: @homePage.url }
          = @homePage.hero_text
      - else
        = @homePage.hero_text

%section.home__events
  .wrapper.wrapper--filters
    - if @all_events.length > 3
      .filter-button.js-filter-button.button
        Filter
      
      .filters.js-filters
        = render 'shared/filters'

    .wrapper--events
      - @events.each do |event|
        = render 'events/event', event: event

