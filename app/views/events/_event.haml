= link_to event_path(id: event.slug), class: 'event-card' do
  - if event.guest
    .event-card__guest
      Special Guest!
  .event-card__image{ style: "background-image: url(#{image_with_default event.image_url})" }
  .event-card__content
    - if event.series
      %span.series= event.series.name
    %h3= event.title
    %p= event_dates(event)
    %p= event.venue&.name
    - unless event.cost.nil?
      %p= event_cost(event)
  