%header.js-header
  %i.fa.fa-bars.fa-2x.header__menu.js-header-menu

  = link_to root_path do
    = image_tag 'logo_pink_and_trans.svg', class: 'logo'

  %nav.js-nav

    %form{action: "https://www.paypal.com/cgi-bin/webscr", method: 'post', target: '_blank', class: 'donate-button'}
      %input{type: 'hidden', name: 'cmd', value: "_s-xclick"}
      %input{type: 'hidden', name: 'hosted_button_id', value: '9VPU4YPS979XW'}
      %button{type: 'submit'} Donate
      %img{alt: '', border: 0, src: 'https://www.paypal.com/en_US/i/scr/pixel.gif', width: 1, height: 1}

    .nav__dropdown
      %span.nav__link
        Festival & Events
        %i.fa.fa-angle-down
      .nav__menu
        = link_to 'Film Festival 2021', festival_index_path, class: 'nav__link'
        = link_to 'Festival Jury', '/jury', class: 'nav__link'
        = link_to 'Film Festival 2020', festival_path(id: '2020'), class: 'nav__link'
        = link_to 'Film Festival 2019', festival_path(id: '2019'), class: 'nav__link'
        = link_to 'Film Festival 2018', festival_path(id: '2018'), class: 'nav__link'

    .nav__dropdown
      %span.nav__link
        Get Involved
        %i.fa.fa-angle-down
      .nav__menu
        = link_to 'Membership', '/membership', class: 'nav__link'
        = link_to 'Volunteer', '/volunteer', class: 'nav__link'

    = link_to 'About Us', '/about-us', class: 'nav__link'
    
    = link_to 'Submit a Film', 'https://filmfreeway.com/festival/WickedQueer', class: 'nav__link', target: '_blank'

