%header.js-header
  %i.fa.fa-bars.fa-2x.header__menu.js-header-menu

  = link_to root_path do
    = image_tag 'logo.svg', class: 'logo'

  %nav.js-nav

    .nav__dropdown
      %span.nav__link
        Festival & Events
        %i.fa.fa-angle-down
      .nav__menu
        = link_to 'Film Festival 2020', festival_index_path, class: 'nav__link'
        = link_to 'Festival Jury', '/jury', class: 'nav__link'
        = link_to 'Film Festival 2019', festival_path(id: '2019'), class: 'nav__link'
        = link_to 'Film Festival 2018', festival_path(id: '2018'), class: 'nav__link'

    .nav__dropdown
      %span.nav__link
        Get Involved
        %i.fa.fa-angle-down
      .nav__menu
        = link_to 'Membership', '/membership', class: 'nav__link'
        = link_to 'Volunteer', '/volunteer', class: 'nav__link'

    = link_to 'About Us', '/about-us', class: 'nav__link'
    
    = link_to 'Submit a Film', 'https://filmfreeway.com/festival/WickedQueer', class: 'nav__link', target: '_blank'

